<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StemWijzer.StellingPage"
             Title="Stelling">

    <StackLayout Orientation="Vertical"
                 Padding="20"
                 VerticalOptions="Center">
        <Label x:Name="LabelStelling"
               TextColor="Black"
               FontSize="24"
               Margin="0,0,0,20" />
        <StackLayout Orientation="Horizontal"
                     Margin="0,0,0,10">
            <Button x:Name="EensButton"
                    Text="Eens"
                    FontSize="18"
                    Clicked="Eens" />
            <Button x:Name="OneensButton"
                    Text="Oneens"
                    FontSize="18"
                    Clicked="Oneens" />
        </StackLayout>
        <Button Text="Ik weet het niet"
                FontSize="18"
                Clicked="IkWeetHetNiet" />
    </StackLayout>

</ContentPage>
